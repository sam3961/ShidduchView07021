<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@drawable/home_top"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_left_arrow_white" />

                    <ImageView
                        android:id="@+id/ivHeader"
                        android:layout_width="@dimen/space_70"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        app:srcCompat="@drawable/shidduch_view_logo" />
                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/avenirnextltpro_demi"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18" />
                    </LinearLayout>-->

                    <!--BackView Side Text -->
                    <LinearLayout
                        android:id="@+id/linearLayout8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:id="@+id/tv_hebru_text_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="@string/hebrew_t"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_25" />

                        <TextView
                            android:id="@+id/tv_hebru_quotes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="@string/hebrew_quotes"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_25" />

                        <TextView
                            android:id="@+id/tv_hebru_text_dt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="@string/hebrew_dt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_25" />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <!--All times main fragment_intro_notes-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginTop="0dp"
                android:layout_marginRight="@dimen/space_8"
                android:background="@drawable/swap_card_shadow_60"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEnjoyQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/space_10"
                    android:fontFamily="@font/avenirnextltpro_demi"
                    android:gravity="center"
                    android:text="@string/whats_your_avalability"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/space_16"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/all_times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/curved_shape_orange_border"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingLeft="@dimen/space_40"
                        android:paddingTop="@dimen/space_6"
                        android:paddingRight="@dimen/space_40"
                        android:paddingBottom="@dimen/space_6"
                        android:text="@string/all_times"
                        android:textColor="@color/colorDarkGrayText"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/early_times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/curved_shape_orange_border"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingLeft="@dimen/space_40"
                        android:paddingTop="@dimen/space_6"
                        android:paddingRight="@dimen/space_40"
                        android:paddingBottom="@dimen/space_6"
                        android:text="@string/early_times"
                        android:textColor="@color/colorDarkGrayText"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/specific_times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/curved_shape_orange_filled"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingLeft="@dimen/space_40"
                        android:paddingTop="@dimen/space_6"
                        android:paddingRight="@dimen/space_40"
                        android:paddingBottom="@dimen/space_6"
                        android:text="@string/specific_times"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>


            </LinearLayout>

            <!--Specific times main fragment_intro_notes-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:background="@drawable/swap_card_shadow_60"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/specific_times_ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/space_10"
                    android:fontFamily="@font/avenirnextltpro_demi"
                    android:gravity="center"
                    android:text="@string/specific_times_u_r_availble_at"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/this_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_marginRight="@dimen/space_4"
                        android:layout_marginBottom="@dimen/space_16"
                        android:background="@drawable/curved_shape_orange_filled"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingLeft="@dimen/space_30"
                        android:paddingTop="@dimen/space_8"
                        android:paddingRight="@dimen/space_30"
                        android:paddingBottom="@dimen/space_8"
                        android:text="@string/this_week"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/next_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_marginRight="@dimen/space_4"
                        android:layout_marginBottom="@dimen/space_16"
                        android:background="@drawable/curved_shape_orange_border"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"

                        android:paddingLeft="@dimen/space_30"
                        android:paddingTop="@dimen/space_8"
                        android:paddingRight="@dimen/space_30"
                        android:paddingBottom="@dimen/space_8"
                        android:text="@string/next_week"
                        android:textColor="@color/colorDarkGrayText"
                        android:textSize="@dimen/text_size_13" />

                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/week_days_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_12"
                android:nestedScrollingEnabled="false" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/week_days_recyclerview"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:background="@drawable/curved_gradient_purple"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/avenirnextltpro_demi"
                android:text="@string/submit"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
