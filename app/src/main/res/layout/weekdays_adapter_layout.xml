<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:button="@mipmap/checkbox_unchecked"
            android:checked="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_4"
            android:layout_weight="0.9"
            android:background="@drawable/swap_card_shadow_40"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/space_2">

            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_20"
                android:layout_weight="1.5"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:text="@string/sunday_friday"
                android:textColor="@color/colorDarkGrayText"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/out_of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_20"
                android:layout_weight="0.5"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:text="1/21"
                android:textColor="@color/colorDarkGrayText"
                android:textSize="@dimen/text_size_15" />


            <View
                android:layout_width="@dimen/space_1"
                android:layout_height="@dimen/space_40"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/space_8"
                android:background="#EAE3F0" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_16"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="2:30"
                android:textColor="@color/colorDarkGrayText"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>