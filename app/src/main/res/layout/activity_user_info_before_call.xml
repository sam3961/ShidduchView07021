<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="shiddush.view.com.mmvsd.ui.introvideo.UserInfoBeforeCallViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/home_top" />

        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/space_4"
            android:src="@drawable/shidduch_view_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/space_8"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/backView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="87"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_left_arrow_white"
                 />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenirnextltpro_demi"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tv_hebru_text_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="@string/hebrew_t"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_25" />

            <TextView
                android:id="@+id/tv_hebru_quotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="@string/hebrew_quotes"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_25" />

            <TextView
                android:id="@+id/tv_hebru_text_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="@string/hebrew_dt"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_25" />

        </LinearLayout>

        <!--start-->
        <!--end-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backImage">


            <TextView
                android:id="@+id/tvTimerEnds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_4"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/have_accept_the_call"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tvMatchedWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTimerEnds"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_10"
                android:fontFamily="@font/avenirnextltpro_demi"
                android:gravity="center"
                android:text="@string/you_have_been_matched_with"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/text_purple"
                android:textSize="@dimen/text_size_18" />

            <RelativeLayout
                android:id="@+id/secondCardCon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMatchedWith"
                android:layout_marginTop="@dimen/space_6"
                android:background="@drawable/swap_card_shadow_60"
                android:gravity="center_vertical"
                android:padding="@dimen/space_16"
            >
                <ImageView
                    android:id="@+id/ivUserImage"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="@dimen/space_80"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/space_1"
                    android:padding="@dimen/space_3"
                    android:src="@drawable/ic_female" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivUserImage"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/space_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/topLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/space_4"
                        android:layout_marginBottom="@dimen/space_4"
                        android:gravity="center"
                        android:paddingBottom="@dimen/space_4"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivGenderSign"
                            android:layout_width="@dimen/space_25"
                            android:layout_height="@dimen/space_25"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_female_sign" />

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_8"
                            android:ellipsize="end"
                            android:fontFamily="@font/avenirnextltpro_demi"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Julia"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/text_size_18"
                            tools:ignore="AllCaps" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvCompatibilityRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/compatibility_rating"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/text_size_16"
                        android:visibility="gone"
                        tools:ignore="AllCaps" />

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ratingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_marginBottom="@dimen/space_8"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivRatingOne"
                            android:layout_width="@dimen/space_25"
                            android:layout_height="@dimen/space_25"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_fill_star" />

                        <ImageView
                            android:id="@+id/ivRatingTwo"
                            android:layout_width="@dimen/space_25"
                            android:layout_height="@dimen/space_25"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_fill_star" />

                        <ImageView
                            android:id="@+id/ivRatingThree"
                            android:layout_width="@dimen/space_25"
                            android:layout_height="@dimen/space_25"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_fill_star" />

                        <ImageView
                            android:id="@+id/ivRatingFour"
                            android:layout_width="@dimen/space_25"
                            android:layout_height="@dimen/space_25"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_fill_star" />

                        <ImageView
                            android:id="@+id/ivRatingFive"
                            android:layout_width="@dimen/space_25"
                            android:layout_height="@dimen/space_25"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_unfil_star" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_8"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="4 / 5"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/text_size_18"
                            tools:ignore="AllCaps" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>



            <TextView
                android:id="@+id/tvCommonAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondCardCon"
                android:layout_centerHorizontal="true"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/space_8"
                android:fontFamily="@font/avenirnextltpro_demi"
                android:gravity="center"
                android:text="@string/answer_in_common"
                android:textAllCaps="true"
                android:visibility="gone"
                android:textColor="@color/text_purple"
                android:textSize="@dimen/text_size_18"
               />
            <RelativeLayout
                android:id="@+id/answersCardCon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10"
                android:background="@drawable/swap_card_shadow_60"
                android:gravity="center_vertical"
                android:padding="@dimen/space_16"
                android:visibility="gone"
              />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMatchedList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/space_4"
                    android:layout_marginEnd="@dimen/space_8"
                    android:layout_marginBottom="@dimen/space_6"
                    android:scrollbarThumbVertical="@drawable/scrollbar"
                    android:scrollbars="vertical"
                    android:visibility="gone"
                    tools:listitem="@layout/matched_answers_list" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMarriagePurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tvEULAText"
                android:text="@string/marriage_purposes_only"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkGrayText"
                android:textSize="@dimen/text_size_14"
/>

            <TextView
                android:id="@+id/tvEULAText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_above="@+id/scButtons"
                android:layout_marginTop="@dimen/space_8"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/space_16"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="@string/agree_eula"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_size_14"
            />

            <LinearLayout
                android:id="@+id/scButtons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size_52"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/space_6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvReject"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/space_4"
                    android:layout_weight=".5"
                    android:background="@drawable/curved_shape_orange_filled"
                    android:fontFamily="@font/avenirnextltpro_demi"
                    android:gravity="center"
                    android:text="@string/reject"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/tvAccept"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/space_4"
                    android:layout_weight=".5"
                    android:background="@drawable/curved_gradient_purple"
                    android:fontFamily="@font/avenirnextltpro_demi"
                    android:gravity="center"
                    android:text="@string/accept"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_18"
                  />

            </LinearLayout>


            <ImageView
                android:id="@+id/imageViewRightClick"
                android:layout_width="@dimen/space_100"
                android:layout_height="100dp"
                android:layout_above="@+id/scButtons"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:visibility="gone"
                app:srcCompat="@drawable/swipe_right" />



        <FrameLayout
            android:id="@+id/frameLayoutProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:padding="@dimen/space_8">


            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/progressBar"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="@color/purple"
                app:cpb_indeterminate_mode="true"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="@color/purple"
                app:cpb_progressbar_color_end="@color/purple"
                app:cpb_progressbar_color_start="@color/purple"
                app:cpb_progressbar_width="@dimen/space_12"
                app:cpb_round_border="false"
                app:cpb_start_angle="170" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="@dimen/space_120"
                    android:layout_height="@dimen/space_120"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/fab_margin"
                    android:backgroundTint="@android:color/white" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textViewTimer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="10"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Seconds"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>


</layout>